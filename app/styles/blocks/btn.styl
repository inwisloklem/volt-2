.btn
  box-sizing border-box
  display inline-block
  padding 22px 35px
  height 60px
  outline none
  border none
  border-radius 30px
  cursor pointer
  background-color $bright-sun
  box-shadow inset 0 -5px 0 0 rgba($full-yellow, 0.75)
  color $white
  text-decoration none
  font(1.125em, 1, 400, lowercase)

  transition all 0.4s ease-in
  transition-property box-shadow, background-color

  @media $tablet
    padding 20px 35px
    
  @media $desktop
    padding 18px 35px

  &:hover
    background-color lighten($bright-sun, 50%)
    box-shadow inset 0 -7px 0 0 lighten($full-yellow, 50%), 0 0 25px 0 $bright-sun

button.btn
  padding-bottom 24px